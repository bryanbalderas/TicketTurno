@using Microsoft.AspNetCore.Identity
@using TicketParcial.Areas.Identity.Data

@inject SignInManager<TicketParcialUser> SignInManager
@inject UserManager<TicketParcialUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TicketParcial</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="dropdown">
                    <button class="btn bg-transparent dropdown-toggle" type="button" id="dropdown-ticket-turno" data-toggle="dropdown" aria-expanded="false">
                        Ticket de turno
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdown-ticket-turno">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <a class="nav-link text-dark d-flex align-items-center" asp-area="" asp-controller="TicketTurno" asp-action="Listadmin">
                                <i class="bi bi-card-checklist mr-1"></i>
                                Buscar ticket
                            </a>
                        }
                        else
                        {
                            <a class="nav-link text-dark d-flex align-items-center" asp-area="" asp-controller="TicketTurno" asp-action="Index">
                                <i class="bi bi-card-checklist mr-1"></i>
                                Buscar ticket
                            </a>
                        }
                        <div class="dropdown-divider"></div>
                        <a class="nav-link text-dark d-flex align-items-center" asp-area="" asp-controller="TicketTurno" asp-action="Create">
                            <i class="bi bi-card-text mr-1"></i>
                            Registrar ticket
                        </a>
                    </div>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial.cshtml" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="p-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - TicketParcial - <a id="register" asp-area="Identity" asp-page="/Account/Register">Registrar Nuevo Usuario</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/validador.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

@model TicketParcial.Models.NivelModel

@{
    ViewData["Title"] = "Eliminar nivel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a type="button" asp-action="Index" class="btn btn-secondary mb-5">
    <i class="bi bi-arrow-return-left mr-1"></i>
    Regresar
</a>

<div class="text-center mb-5">
    <h5 class="font-weight-bold"> ¿Estas seguro de que quieres eliminar este nivel?</h5>
    <small class="text-center">Esta acción no podrá ser revertida.</small>

</div>

<div class="row d-flex justify-content-around">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-content table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="text-center align-middle">
                                Nivel
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(model => model.descripcion)
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12 d-flex justify-content-around">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <button type="submit" value="Eliminar" class="btn btn-danger">
                <i class="bi bi-trash mr-1"></i>
                Eliminar nivel
            </button>
        </form>
    </div>
</div>

@model TicketParcial.Models.TicketTurnoModel

@{
    ViewData["Title"] = "Eliminar ticket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a type="button" asp-action="Listadmin" class="btn btn-secondary mb-5">
    <i class="bi bi-arrow-return-left mr-1"></i>
    Regresar
</a>

<div class="text-center mb-5">
    <h5 class="font-weight-bold"> ¿Estas seguro de que quieres eliminar este ticket?</h5>
    <small class="text-center">Esta acción no podrá ser revertida.</small>
</div>

<div class="row d-flex justify-content-around">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-content table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="text-center align-middle">
                                @Html.DisplayNameFor(model => model.nombreRealiza)
                            </th>
                            <th class="text-center align-middle">
                                @Html.DisplayNameFor(model => model.curp)
                            </th>
                            <th class="text-center align-middle">
                                @Html.DisplayNameFor(model => model.nombre)
                            </th>
                            <th class="text-center align-middle">
                                @Html.DisplayNameFor(model => model.paterno)
                            </th>
                            <th class="text-center align-middle">
                                @Html.DisplayNameFor(model => model.materno)
                            </th>
                            <th class="text-center align-middle">
                                @Html.DisplayNameFor(model => model.telefono)
                            </th>
                            <th class="text-center align-middle">
                                @Html.DisplayNameFor(model => model.celular)
                            </th>
                            <th class="text-center align-middle">
                                @Html.DisplayNameFor(model => model.correo)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(model => model.nombreRealiza)
                            </td>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(model => model.curp)
                            </td>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(model => model.nombre)
                            </td>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(model => model.paterno)
                            </td>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(model => model.materno)
                            </td>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(model => model.telefono)
                            </td>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(model => model.celular)
                            </td>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(model => model.correo)
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12 d-flex justify-content-around">
        <form asp-action="Delete" id="form" onsubmit="return confirmDelete(event);">
            <input type="hidden" asp-for="ID" />
            <button type="submit" value="Eliminar" class="btn btn-danger">
                <i class="bi bi-trash mr-1"></i>
                Eliminar ticket
            </button>
        </form>
    </div>
</div>

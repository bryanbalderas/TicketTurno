@model IEnumerable<TicketParcial.Models.AsuntoModel>

@{
    ViewData["Title"] = "Asuntos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a type="button" class="btn btn-success mb-5" asp-action="Create">
    <i class="bi bi-plus-circle mr-1"></i>
    Agregar asunto
</a>

<div class="row d-flex justify-content-around">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-content table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="text-center align-middle">
                                Asunto
                            </th>
                            <th class="text-center align-middle">
                                Acciones
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center align-middle">
                                    @Html.DisplayFor(modelItem => item.descripcion)
                                </td>
                                <td class="text-center align-middle">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning text-white">
                                            <i class="bi bi-pencil mr-1"></i>
                                            Modificar
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-primary">
                                            <i class="bi bi-eye mr-1"></i>
                                            Ver detalle
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">
                                            <i class="bi bi-trash mr-1"></i>
                                            Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
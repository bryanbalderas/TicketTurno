@model TicketParcial.Models.AsuntoModel

@{
    ViewData["Title"] = "Modificar asunto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a type="button" asp-action="Index" class="btn btn-secondary mb-5">
    <i class="bi bi-arrow-return-left mr-1"></i>
    Regresar
</a>

<div class="row d-flex justify-content-around">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header">
                <h6 class="font-weight-bold">
                    Asunto
                </h6>
            </div>
            <div class="card-content p-4">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group">
                        <label asp-for="descripcion" class="control-label"></label>
                        <input asp-for="descripcion" class="form-control" />
                        <span asp-validation-for="descripcion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-warning text-white mt-3">
                            <i class="bi bi-pencil mr-1"></i>
                            Actualizar asunto
                        </button>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
